{
  "model": "sonnet",
  "permissions": {
    "defaultMode": "acceptEdits",
    "disableBypassPermissionsMode": "disable",
    "allow": [
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(touch:*)",
      "Bash(tree:*)"
    ],
    "deny": [
      "Bash(git push:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "__claude-code-statusline",
    "padding": 0
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "__claude-code-notify Notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "__claude-code-notify Stop"
          }
        ]
      }
    ]
  }
}
